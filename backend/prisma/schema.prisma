// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NEXT_PUBLIC_DATABASE_URL")
}

model Product {
  prod_ID      Int      @id @default(autoincrement())
  prod_code         String? @unique
  prod_name         String
  prod_price        String
  prod_sku          String
  prod_sellprice    String?
  prod_buyprice     String?
  prod_totalSP      String?
  prod_totalBP      String?
  prod_totalPrice   String?
  accountantId    Int?
  accountant   Accountant? @relation(fields: [accountantId], references: [acct_ID])
 
}

model Accountant {
  acct_ID      Int      @id @default(autoincrement())
  name         String
  email        String
  pass         String
  username     String    @unique
  products     Product[]
  passwordResetToken passwordResetToken[]
}

model passwordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  expiresAt DateTime
  accountantId   Int               
  accountant   Accountant   @relation(fields: [accountantId], references: [acct_ID])
}

